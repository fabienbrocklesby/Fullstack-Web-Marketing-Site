---
export interface Props {
  id?: string;
  name: string;
  label?: string;
  value?: string;
  placeholder?: string;
  error?: string;
  help?: string;
  required?: boolean;
  disabled?: boolean;
  rows?: number;
}
const p = Astro.props as Props;
const id = p.id || p.name;
---

<div class="form-control" data-field>
  {
    p.label && (
      <label for={id} class="label">
        <span class="label-text font-medium">
          {p.label}
          {p.required && <span class="text-error ml-0.5">*</span>}
        </span>
      </label>
    )
  }
  <textarea
    id={id}
    name={p.name}
    rows={p.rows || 4}
    placeholder={p.placeholder}
    class={`textarea textarea-bordered ${p.error ? "textarea-error" : ""}`}
    required={p.required}
    disabled={p.disabled}
    aria-invalid={!!p.error}>{p.value}</textarea
  >
  {
    p.help && (
      <div id={`${id}-help`} class="label">
        <span class="label-text-alt opacity-70">{p.help}</span>
      </div>
    )
  }
  {
    p.error && (
      <p class="mt-1 text-sm text-error" role="alert">
        {p.error}
      </p>
    )
  }
</div>
