{
  "collectionName": "components_elements_pricing_plans",
  "info": {
    "displayName": "Pricing Plan",
    "description": "Individual pricing plan with features, customization options and call-to-action"
  },
  "options": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "default": "Starter Plan"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "default": 99.0
    },
    "interval": {
      "type": "enumeration",
      "enum": ["one-time", "month", "year"],
      "default": "one-time"
    },
    "features": {
      "type": "json",
      "required": true,
      "default": [
        "Complete source code",
        "Basic documentation",
        "Email support"
      ]
    },
    "buttonText": {
      "type": "string",
      "default": "Get Started"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "description": {
      "type": "text"
    },
    "badge": {
      "type": "string"
    },
    "badgeStyle": {
      "type": "enumeration",
      "enum": ["primary", "secondary", "accent", "success", "warning", "error"],
      "default": "primary"
    }
  }
}
