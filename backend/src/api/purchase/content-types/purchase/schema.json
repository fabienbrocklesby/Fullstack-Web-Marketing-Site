{
  "kind": "collectionType",
  "collectionName": "purchases",
  "info": {
    "singularName": "purchase",
    "pluralName": "purchases",
    "displayName": "Purchase",
    "description": "Purchase records from Stripe"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "stripeSessionId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "stripePaymentIntentId": {
      "type": "string"
    },
    "stripeInvoiceId": {
      "type": "string"
    },
    "stripeSubscriptionId": {
      "type": "string"
    },
    "mode": {
      "type": "enumeration",
      "enum": [
        "payment",
        "subscription"
      ],
      "default": "payment"
    },
    "isManual": {
      "type": "boolean",
      "default": false
    },
    "manualReason": {
      "type": "text"
    },
    "createdByAdmin": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "usd"
    },
    "customerEmail": {
      "type": "email"
    },
    "priceId": {
      "type": "string",
      "required": true
    },
    "affiliate": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::affiliate.affiliate",
      "inversedBy": "purchases"
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "purchases"
    },
    "licenseKey": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::license-key.license-key"
    },
    "commissionAmount": {
      "type": "decimal",
      "default": 0
    },
    "commissionPaid": {
      "type": "boolean",
      "default": false
    },
    "metadata": {
      "type": "json"
    }
  }
}
