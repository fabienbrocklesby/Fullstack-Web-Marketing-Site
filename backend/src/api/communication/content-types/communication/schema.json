{
  "collectionName": "communications",
  "info": {
    "singularName": "communication",
    "pluralName": "communications",
    "displayName": "Communication"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "type": {
      "type": "enumeration",
      "enum": ["email", "call", "note"],
      "default": "email"
    },
    "subject": { "type": "string" },
    "content": { "type": "text" },
    "timestamp": { "type": "datetime", "default": "now" },
    "lead": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::lead.lead"
    }
  }
}
