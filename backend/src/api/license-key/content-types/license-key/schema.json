{
  "kind": "collectionType",
  "collectionName": "license_keys",
  "info": {
    "singularName": "license-key",
    "pluralName": "license-keys",
    "displayName": "License Key",
    "description": "License keys for customer products"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "key": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "productName": {
      "type": "string",
      "required": true
    },
    "priceId": {
      "type": "string",
      "required": true
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "licenseKeys"
    },
    "customerEmail": {
      "type": "email",
      "configurable": false
    },
    "purchase": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::purchase.purchase"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "unused",
        "active"
      ],
      "default": "unused"
    },
    "jti": {
      "type": "string",
      "description": "Current activation UUID (JWT ID)"
    },
    "machineId": {
      "type": "string",
      "description": "Hash of device fingerprint that license is locked to"
    },
    "typ": {
      "type": "enumeration",
      "enum": [
        "trial",
        "paid",
        "starter",
        "pro",
        "enterprise"
      ],
      "default": "paid"
    },
    "trialStart": {
      "type": "datetime",
      "description": "Trial start date (only for trial licenses)"
    },
    "isUsed": {
      "type": "boolean",
      "default": false,
      "description": "Legacy field - kept for backward compatibility"
    },
    "deviceInfo": {
      "type": "json",
      "description": "Information about the device where the license is used"
    },
    "activatedAt": {
      "type": "datetime"
    },
    "expiresAt": {
      "type": "datetime"
    },
    "maxActivations": {
      "type": "integer",
      "default": 1,
      "min": 1
    },
    "currentActivations": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "deactivationCode": {
      "type": "text",
      "description": "Encrypted deactivation code for secure license deactivation"
    },
    "activationNonce": {
      "type": "string",
      "description": "Hashed nonce used for secure offline deactivation"
    }
  }
}