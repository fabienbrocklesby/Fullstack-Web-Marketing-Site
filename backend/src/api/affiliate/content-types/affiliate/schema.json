{
  "kind": "collectionType",
  "collectionName": "affiliates",
  "info": {
    "singularName": "affiliate",
    "pluralName": "affiliates",
    "displayName": "Affiliate",
    "description": "Affiliate partners and their details"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "code": {
      "type": "uid",
      "targetField": "name"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "payoutDetails": {
      "type": "json"
    },
    "commissionRate": {
      "type": "decimal",
      "default": 0.1,
      "min": 0,
      "max": 1
    },
    "totalEarnings": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "purchases": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::purchase.purchase",
      "mappedBy": "affiliate"
    },
    "joinedAt": {
      "type": "datetime",
      "default": null
    },
    "notes": {
      "type": "text"
    }
  }
}
