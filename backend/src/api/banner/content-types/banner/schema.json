{
  "kind": "collectionType",
  "collectionName": "banners",
  "info": {
    "singularName": "banner",
    "pluralName": "banners",
    "displayName": "Banner",
    "description": "Site-wide top banners configurable from CMS"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "enabled": {
      "type": "boolean",
      "default": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "severity": {
      "type": "enumeration",
      "enum": [
        "info",
        "success",
        "warning",
        "error"
      ],
      "default": "info"
    },
    "linkUrl": {
      "type": "string"
    },
    "dismissible": {
      "type": "boolean",
      "default": true
    },
    "startAt": {
      "type": "datetime"
    },
    "endAt": {
      "type": "datetime"
    },
    "metadata": {
      "type": "json"
    }
  }
}