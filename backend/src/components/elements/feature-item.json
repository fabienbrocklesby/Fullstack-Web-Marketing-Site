{
  "collectionName": "components_elements_feature_items",
  "info": {
    "displayName": "Feature Item",
    "description": "Individual feature with icon, title, description and customization options"
  },
  "options": {},
  "attributes": {
    "icon": {
      "type": "string",
      "required": true,
      "default": "rocket"
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "badge": {
      "type": "string"
    },
    "badgeStyle": {
      "type": "enumeration",
      "enum": ["primary", "secondary", "accent", "success", "warning", "info"],
      "default": "primary"
    },
    "link": {
      "type": "string"
    },
    "iconStyle": {
      "type": "enumeration",
      "enum": ["emoji", "circle", "square", "none"],
      "default": "none"
    },
    "size": {
      "type": "enumeration",
      "enum": ["sm", "md", "lg"],
      "default": "md"
    }
  }
}
