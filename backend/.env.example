# AI_TOKEN_TTL_SECONDS=900
# OpenAI request timeout in milliseconds (default: 15000)
# AI_OPENAI_TIMEOUT_MS=15000
# OpenAI model (default: gpt-4o-mini)
# AI_OPENAI_MODEL=gpt-4o-mini
# Settings Assistant limits
# AI_SETTINGS_MAX_PROMPT_CHARS=2000
# AI_SETTINGS_MAX_CONTEXT_KEYS=10
# AI_SETTINGS_MAX_CONTEXT_VALUE_CHARS=200

# Frontend URL
FRONTEND_URL=http://localhost:4321

