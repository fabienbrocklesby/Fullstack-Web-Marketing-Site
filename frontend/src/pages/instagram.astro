---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Icon from "../components/icons/Icon.astro";

const profileUrl = "https://www.instagram.com/lightlane.app/";
---

<Layout
  title="Instagram - Light Lane"
  description="Follow Light Lane on Instagram for new builds, engraving workflows, product updates, and creator highlights."
  keywords="Light Lane Instagram, laser engraving Instagram, Light Lane social"
  breadcrumbs={[
    { name: "Home", url: "/" },
    { name: "Instagram", url: "/instagram" },
  ]}
>
  <main>
    <section class="py-20 md:py-24">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center space-y-6">
          <div class="flex justify-center">
            <div class="w-16 h-16 rounded-2xl bg-primary/10 flex items-center justify-center text-primary">
              <Icon name="instagram" class="w-8 h-8" ariaLabel="Instagram" />
            </div>
          </div>
          <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight">
            Light Lane on Instagram
          </h1>
          <p class="text-base md:text-lg text-base-content/70 max-w-2xl mx-auto">
            Follow <strong>@lightlane.app</strong> for product updates, live workflow clips,
            feature drops, and creator spotlight posts.
          </p>
          <div class="flex flex-wrap justify-center gap-3">
            <a
              href={profileUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-primary"
            >
              <Icon name="instagram" class="w-4 h-4 mr-2" ariaLabel="Instagram" />
              Open Instagram
            </a>
            <a href="/contact" class="btn btn-outline">Contact the Team</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
