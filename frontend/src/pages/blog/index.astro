---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// This would typically fetch from your CMS
const posts = [
  {
    id: 1,
    title: 'Getting Started with SaaS Development',
    slug: 'getting-started-saas-development',
    excerpt: 'Learn the fundamentals of building a successful SaaS application.',
    date: '2024-01-15',
    author: 'John Doe',
  },
  {
    id: 2,
    title: 'Building Modern Web Applications',
    slug: 'building-modern-web-applications',
    excerpt: 'Explore the latest trends and technologies in web development.',
    date: '2024-01-10',
    author: 'Jane Smith',
  },
  {
    id: 3,
    title: 'Payment Integration Best Practices',
    slug: 'payment-integration-best-practices',
    excerpt: 'How to implement secure and reliable payment processing.',
    date: '2024-01-05',
    author: 'Mike Johnson',
  },
];
---

<Layout
  title="Blog - SaaS Boilerplate"
  description="Latest insights and tutorials about SaaS development"
>
  <Header />
  
  <main>
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold mb-4">Blog</h1>
          <p class="text-xl text-base-content/70">
            Latest insights and tutorials about SaaS development
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          {posts.map((post) => (
            <div class="card bg-base-200 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-xl mb-2">
                  <a href={`/blog/${post.slug}`} class="hover:text-primary">
                    {post.title}
                  </a>
                </h3>
                <p class="text-base-content/70 mb-4">{post.excerpt}</p>
                <div class="flex justify-between items-center text-sm text-base-content/60">
                  <span>{post.author}</span>
                  <span>{post.date}</span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
