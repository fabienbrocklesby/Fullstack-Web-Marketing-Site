---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Join Lightlane">
  <Header />
  <main class="py-16">
    <div class="container max-w-xl">
      <div class="alert alert-info">
        <span>
          Lightlane is publicly available — invite codes are no longer required.
          Redirecting you to pricing…
        </span>
      </div>
      <div class="mt-4">
        <a href="/pricing" class="btn btn-primary">Go to Pricing</a>
      </div>
    </div>
  </main>
  <Footer />
  <script>
    setTimeout(() => (window.location.href = "/pricing"), 1200);
  </script>
</Layout>
