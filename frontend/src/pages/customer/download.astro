---
/**
 * Customer Download Page - Download Light Lane installers
 *
 * Provides download links for macOS and Windows installers,
 * along with brief installation instructions.
 */
import PortalLayout from "../../layouts/PortalLayout.astro";
import DownloadButtons from "../../components/DownloadButtons.astro";
---

<PortalLayout title="Download Light Lane" activeTab="dashboard">
  <div class="max-w-2xl mx-auto space-y-6">
    <!-- Back link -->
    <a href="/customer/dashboard" class="btn btn-ghost btn-sm gap-2">
      <svg
        class="w-4 h-4"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Dashboard
    </a>

    <!-- Download Card -->
    <section class="surface rounded-2xl p-6 md:p-8">
      <div class="text-center mb-8">
        <h1 class="text-2xl md:text-3xl font-bold mb-3 text-ll-gradient">
          Download Light Lane
        </h1>
        <p class="text-base-content/70">
          Choose your platform to download the installer. The app includes a
          full-featured 14-day trial.
        </p>
      </div>

      <!-- Download Buttons -->
      <div class="mb-8">
        <DownloadButtons align="center" size="md" soft={false} />
      </div>

      <!-- Installation Instructions -->
      <div class="divider">Installation</div>

      <div class="grid md:grid-cols-2 gap-6">
        <!-- macOS -->
        <div class="bg-base-200/50 rounded-xl p-5">
          <h3 class="font-semibold flex items-center gap-2 mb-3">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"
              ></path>
            </svg>
            macOS
          </h3>
          <ol
            class="text-sm text-base-content/70 space-y-2 list-decimal list-inside"
          >
            <li>Download the <code class="text-xs">.dmg</code> file</li>
            <li>Open the file and drag Light Lane to Applications</li>
            <li>Launch from Applications or Spotlight</li>
            <li>
              If blocked: System Settings → Privacy & Security → Open Anyway
            </li>
          </ol>
        </div>

        <!-- Windows -->
        <div class="bg-base-200/50 rounded-xl p-5">
          <h3 class="font-semibold flex items-center gap-2 mb-3">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M3 12V6.75l6-1.32v6.48L3 12zm17-9v8.75l-10 .15V5.21L20 3zM3 13l6 .09v6.81l-6-1.15V13zm7 .25l10 .15V21l-10-1.91V13.25z"
              ></path>
            </svg>
            Windows
          </h3>
          <ol
            class="text-sm text-base-content/70 space-y-2 list-decimal list-inside"
          >
            <li>Download the <code class="text-xs">.exe</code> installer</li>
            <li>Run the installer (may require admin approval)</li>
            <li>If SmartScreen appears: "More info" → "Run anyway"</li>
            <li>Launch from Start Menu or Desktop shortcut</li>
          </ol>
        </div>
      </div>

      <!-- After Install -->
      <div class="divider">After Installation</div>

      <div class="bg-base-200/50 rounded-xl p-5">
        <h3 class="font-semibold mb-3">Activate your subscription</h3>
        <ol
          class="text-sm text-base-content/70 space-y-2 list-decimal list-inside"
        >
          <li>Open Light Lane on your computer</li>
          <li>Sign in with your account email</li>
          <li>Choose a subscription from the list</li>
          <li>Click "Activate" - you're ready to engrave!</li>
        </ol>
        <p class="text-xs text-base-content/50 mt-4">
          Need to activate an air-gapped machine?
          <a
            href="/customer/dashboard?tab=advanced#airgapped-section"
            class="link link-primary">Use Advanced Tools →</a
          >
        </p>
      </div>
    </section>

    <!-- Help Link -->
    <div class="text-center text-sm text-base-content/60">
      Having trouble?
      <a href="mailto:support@lightlane.app" class="link link-primary"
        >Contact support</a
      >
    </div>
  </div>
</PortalLayout>
