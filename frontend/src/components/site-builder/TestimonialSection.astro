---
interface TestimonialItem {
  quote: string;
  author: string;
  role?: string;
  company?: string;
  avatar?: any;
}

export interface Props {
  title: string;
  subtitle?: string;
  testimonials: TestimonialItem[] | any[]; // Support both simple arrays and Strapi components
}

const { title, subtitle, testimonials = [] } = Astro.props;

// Transform testimonials to handle both formats (simple arrays and Strapi components)
const transformedTestimonials = testimonials.map((testimonial) => {
  // If it's a Strapi component, extract the actual data
  if (testimonial.__component === "elements.testimonial-item") {
    return {
      quote: testimonial.quote,
      author: testimonial.author,
      role: testimonial.role,
      company: testimonial.company,
      avatar: testimonial.avatar,
    };
  }
  // Otherwise, use it as-is (simple object format)
  return testimonial;
});
---

<section class="py-20 bg-base-200">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold mb-4">{title}</h2>
      {subtitle && <p class="text-xl text-base-content/70">{subtitle}</p>}
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        transformedTestimonials.map((testimonial) => (
          <div class="card bg-base-100 shadow-lg">
            <div class="card-body">
              <blockquote class="text-lg italic mb-4">
                "{testimonial.quote}"
              </blockquote>
              <div class="flex items-center gap-3">
                <div class="avatar placeholder">
                  <div class="w-12 h-12 rounded-full bg-primary text-primary-content flex items-center justify-center flex-shrink-0">
                    <span class="text-xl">
                      {testimonial.author.charAt(0).toUpperCase()}
                    </span>
                  </div>
                </div>
                <div>
                  <div class="font-semibold">{testimonial.author}</div>
                  {testimonial.role && (
                    <div class="text-sm text-base-content/70">
                      {testimonial.role}
                      {testimonial.company && ` at ${testimonial.company}`}
                    </div>
                  )}
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
