---
/**
 * PortalLayout - Shared layout for authenticated customer portal pages.
 *
 * Features:
 * - Sticky navbar with Dashboard/Account tabs
 * - User dropdown (Billing, Account, Logout)
 * - Mobile-friendly responsive design
 * - Auth guard (redirects to login if not authenticated)
 * - Download modal for app downloads
 */

export interface Props {
  title?: string;
  description?: string;
  activeTab?: "dashboard" | "account";
}

const {
  title = "Portal - Lightlane",
  description = "Manage your Lightlane entitlements and devices.",
  activeTab = "dashboard",
} = Astro.props;

// @ts-ignore - Astro injects import.meta.env at build time
import "../styles/app.css";
import { STRAPI_URL } from "../config/strapi";
import DownloadModal from "../components/DownloadModal.astro";

const siteUrl = Astro.site?.href || "https://lightlane.app/";
---

<!doctype html>
<html lang="en" data-cms-url={STRAPI_URL} data-theme="lightlane">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/AppIcon.ico" sizes="any" />
    <link rel="shortcut icon" href="/AppIcon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="theme-color" content="#0F172A" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="noindex, nofollow" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      media="print"
      onload="this.media='all';this.onload=null"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      />
    </noscript>

    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="min-h-screen bg-base-100 text-base-content">
    <!-- Portal Navbar -->
    <header
      class="navbar bg-base-200/80 backdrop-blur-sm sticky top-0 z-50 border-b border-base-300"
    >
      <!-- Left: Logo + Brand -->
      <div class="navbar-start">
        <a href="/" class="flex items-center gap-2 px-2" title="Back to site">
          <picture class="h-8 flex items-center">
            <source
              srcset="https://publicassets.lightlane.app/LightLane(WEBP).webp"
              type="image/webp"
            />
            <img
              src="https://publicassets.lightlane.app/LightLane(SVG).svg"
              alt="Lightlane"
              class="h-8 w-auto"
              loading="eager"
              decoding="async"
            />
          </picture>
        </a>
      </div>

      <!-- Center: Tabs (Desktop) -->
      <div class="navbar-center hidden sm:flex">
        <div role="tablist" class="tabs tabs-box bg-base-300/50">
          <a
            role="tab"
            href="/customer/dashboard"
            class:list={["tab", { "tab-active": activeTab === "dashboard" }]}
          >
            <svg
              class="w-4 h-4 mr-1.5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
              ></path>
            </svg>
            Dashboard
          </a>
          <a
            role="tab"
            href="/customer/profile"
            class:list={["tab", { "tab-active": activeTab === "account" }]}
          >
            <svg
              class="w-4 h-4 mr-1.5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              ></path>
            </svg>
            Account
          </a>
        </div>
      </div>

      <!-- Right: User Menu -->
      <div class="navbar-end gap-2">
        <!-- Mobile tabs -->
        <div class="sm:hidden flex gap-1">
          <a
            href="/customer/dashboard"
            class:list={[
              "btn btn-ghost btn-sm btn-square",
              { "btn-active": activeTab === "dashboard" },
            ]}
            title="Dashboard"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
              ></path>
            </svg>
          </a>
          <a
            href="/customer/profile"
            class:list={[
              "btn btn-ghost btn-sm btn-square",
              { "btn-active": activeTab === "account" },
            ]}
            title="Account"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              ></path>
            </svg>
          </a>
        </div>

        <!-- User dropdown -->
        <div class="dropdown dropdown-end">
          <button
            tabindex="0"
            role="button"
            class="btn btn-ghost btn-circle"
            aria-label="User menu"
            id="portal-user-btn"
          >
            <div class="avatar avatar-placeholder">
              <div class="bg-primary text-primary-content w-9 rounded-full">
                <span class="text-sm font-semibold" id="portal-user-initials"
                  >?</span
                >
              </div>
            </div>
          </button>
          <ul
            tabindex="0"
            class="dropdown-content menu bg-base-200 rounded-box z-[1] w-52 p-2 shadow-lg mt-2"
          >
            <li class="menu-title px-2 py-1">
              <span id="portal-user-email" class="text-xs truncate"
                >Loading...</span
              >
            </li>
            <div class="divider my-0"></div>
            <li>
              <button id="portal-billing-btn" class="flex items-center gap-2">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
                  ></path>
                </svg>
                Billing Portal
              </button>
            </li>
            <li>
              <a href="/customer/profile" class="flex items-center gap-2">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Account Settings
              </a>
            </li>
            <div class="divider my-0"></div>
            <li>
              <button
                id="portal-logout-btn"
                class="text-error flex items-center gap-2"
              >
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                  ></path>
                </svg>
                Logout
              </button>
            </li>
          </ul>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-6 max-w-6xl">
      <slot />
    </main>

    <!-- Portal Client Scripts -->
    <script>
      import {
        getAuthState,
        logout,
        getDisplayName,
        getInitials,
      } from "../lib/portal/auth";
      import { portalFetch } from "../lib/portal/api";
      import type { BillingPortalResponse } from "../lib/portal/types";

      // Auth guard - redirect if not logged in
      const auth = getAuthState();
      if (!auth) {
        window.location.href =
          "/customer/login?redirect=" +
          encodeURIComponent(window.location.pathname);
      }

      // Populate user info
      function updateUserUI() {
        const auth = getAuthState();
        if (!auth) return;

        const emailEl = document.getElementById("portal-user-email");
        const initialsEl = document.getElementById("portal-user-initials");

        if (emailEl) {
          emailEl.textContent = auth.customer.email;
        }
        if (initialsEl) {
          initialsEl.textContent = getInitials(auth.customer);
        }
      }

      // Billing portal button
      const billingBtn = document.getElementById("portal-billing-btn");
      if (billingBtn) {
        billingBtn.addEventListener("click", async () => {
          billingBtn.classList.add("loading");
          try {
            const result = await portalFetch<BillingPortalResponse>(
              "/api/customers/billing-portal",
              {
                method: "POST",
                body: JSON.stringify({ returnUrl: window.location.href }),
              },
            );
            if (result.url) {
              window.location.href = result.url;
            }
          } catch (err) {
            console.error("Failed to open billing portal:", err);
            alert("Unable to open billing portal. Please try again.");
          } finally {
            billingBtn.classList.remove("loading");
          }
        });
      }

      // Logout button
      const logoutBtn = document.getElementById("portal-logout-btn");
      if (logoutBtn) {
        logoutBtn.addEventListener("click", () => {
          logout();
        });
      }

      // Initialize
      updateUserUI();
    </script>

    <!-- Download Modal -->
    <DownloadModal />

    <!-- Download Modal Trigger Script -->
    <script>
      // Handle data-download-modal-trigger clicks
      const downloadModal = document.getElementById(
        "download-modal",
      ) as HTMLDialogElement | null;
      if (downloadModal) {
        document.addEventListener("click", (e) => {
          const target = e.target as HTMLElement;
          const trigger = target.closest("[data-download-modal-trigger]");
          if (trigger) {
            e.preventDefault();
            downloadModal.showModal();
          }
        });
      }
    </script>
  </body>
</html>
